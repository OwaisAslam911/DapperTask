                                                 <td>
                                                 <span class="empPhone" id="empPhone-${emp.employeeId}">${emp.phone}</span>
                                                 <input type="text" class="form-control update-field" id="edit-empName-${emp.employeeId}" value="${emp.phone}" style="display:none;" />
                                                 </td>
                                                 <td>
                                                 <span class="empEmail" id="empEmail-${emp.employeeId}">${emp.email}</span>
                                                 <input type="text" class="form-control update-field" id="edit-empName-${emp.employeeId}" value="${emp.employeeName}" style="display:none;" />
                                                 </td>
                                                 <td>
                                                 <span class="empOrg" id="empOrg-${emp.employeeId}">${emp.organizationName}</span>
                                                      <input type="text" class="form-control update-field" id="edit-empName-${emp.employeeId}" value="${emp.employeeName}" style="display:none;" />
                                                 </td>
                                                  <td>
                                                  <span class="empDept" id="empDept-${emp.employeeId}">${emp.departmentName}</span>
                                                       <input type="text" class="form-control update-field" id="edit-empName-${emp.employeeId}" value="${emp.employeeName}" style="display:none;" />
                                                  </td>
                                                 <td >
                                                 <span class="empPost" id="empdept-${emp.employeeId}">${emp.positionTitle}</span>
                                                      <input type="text" class="form-control update-field" id="edit-empName-${emp.employeeId}" value="${emp.employeeName}" style="display:none;" />
                                                 </td>
                                                 <td>
                                                 <span class="empSalary" id="empSalary-${emp.employeeId}">${emp.salary}</span>
                                                      <input type="text" class="form-control update-field" id="edit-empName-${emp.employeeId}" value="${emp.employeeName}" style="display:none;" />
                                                 </td>
                                             <td>
                                                 <button  class="btn btn-primary" id="row-" onclick="editMapping(${emp.employeeId})">Edit</button>

                                                 <button class="btn update-btn" id="row-" style="display:none;" onclick="updateMapping(${emp.employeeId})">Updatee</button>

