<style>
  .myPieChart {
        width: 100%; /* Full width of the parent container */
        height: auto; /* Auto height to maintain aspect ratio */
        max-width: 400px; /* Max width if you want to limit it */
    }
   

</style>
@{
    ViewData["Title"] = "Dashboard";
}
    <div class="container">
<div class="content-body">
    <h1>Dashboard</h1>

    <div>
        
        <canvas id="myChart"></canvas>
    </div>


        <div>
            <h2>line chart</h2>
            <canvas id="lineChart"></canvas>
        </div>


    <div class="myPieChart" >
    <h2>Employee Distribution by Position</h2>
            <canvas id="myPieChart" width="400" height="200"></canvas>
    </div>


       
</div>
 </div >
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const labels = @Html.Raw(Json.Serialize(ViewBag.EmployeeNames));
    const data = @Html.Raw(Json.Serialize(ViewBag.EmployeeSalaries));
    const ctx = document.getElementById('myChart');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Salary',
                data: data,
                borderWidth: 2,
                
                backgroundColor: 'rgba(75, 192, 192, 0.2)', // Bar color
                borderColor: 'rgba(75, 192, 192, 1)', // Bar border color
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Salary' // Y-axis title
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Employee Names' // X-axis title
                    }
                }
            }
        }
    });


       

</script>

<script>
    const positions = @Html.Raw(Json.Serialize(ViewBag.Positions));
    const employeeCounts = @Html.Raw(Json.Serialize(ViewBag.EmployeeCounts));

    const pieCtx = document.getElementById('myPieChart').getContext('2d');;

    new Chart(pieCtx, {
        type: 'pie',
        
        data: {
            labels: positions,
            datasets: [{
                label: 'Number of Employees',
                data: employeeCounts,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Employee Distribution by Position'
                }
            }
        }
    });
</script>
<script>
    const lineCtx = document.getElementById('lineChart').getContext('2d');
    new Chart(lineCtx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Salary',
                data: data,
                borderWidth: 2,
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Salary'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Employee Names'
                    }
                }
            }
        }
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


